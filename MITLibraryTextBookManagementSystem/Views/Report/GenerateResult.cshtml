@model IEnumerable<MITLibraryTextBookManagementSystem.Models.Report>

@{
    ViewBag.Title = "GenerateResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GenerateResult</h2>

<table id="tblReport" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>UnitCode</th>
            <th>CampusName</th>
            <th>BookPublisher</th>
            <th>OCLC Number</th>
            <th>AvaibleBook</th>
            <th>ActualRequiredBook</th>
            <th>NeedOrder</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.UnitCode
                </td>
                <td>
                    @item.CampusName
                </td>
                <td>
                    @item.BookPublisher
                </td>
                <td>
                    @item.OCLC_Number
                </td>
                <td>
                    @item.AvaibleBook
                </td>
                <td>
                    @item.ActualRequiredBook
                </td>
                <td>
                    @item.NeedOrder
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    $(function () {
        bsCustomFileInput.init();
        $("#tblReport").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#tblReport_wrapper .col-md-6:eq(0)');
    });
</script>