                                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger", @disabled = "disabled" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
